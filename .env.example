# Example .env file for the Django Scheduling Project

# Django secret key (generate a new one for production)
SECRET_KEY='your-secret-key-here'

# Debug mode: 'True' for development, 'False' for production
DEBUG=True

# Allowed hosts (comma-separated, without spaces)
# Example: ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Templates directories (comma-separated, full paths)
# Example: TEMPLATES_DIRS=/path/to/templates
TEMPLATES_DIRS=/path/to/your/templates

# Choose the database engine: 'sqlite' or 'mysql'
DATABASE_ENGINE=sqlite

# MySQL database settings (only required if DATABASE_ENGINE is 'mysql')
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_database_user
MYSQL_PASSWORD=your_database_password
MYSQL_HOST=localhost
MYSQL_PORT=3306

# Time zone setting
TIME_ZONE=UTC

# Static files settings
STATIC_URL=/static/
STATIC_ROOT=/path/to/staticfiles

# Media files settings
MEDIA_URL=/media/
MEDIA_ROOT=/path/to/mediafiles
